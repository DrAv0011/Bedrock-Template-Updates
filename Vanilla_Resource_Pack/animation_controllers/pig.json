{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.pig.setup": {
      "states": {
        "default": {
          "animations": [ { "setup": [] } ]
        }
      }
    },
    "controller.animation.pig.baby": {
      "states": {
        "baby": {
          "parameters": [ "query.is_baby" ],
          "animations": [
            {
              "baby_transform": [
                {
                  "0.0": 0.0,
                  "1.0": 1.0
                }
              ]
            }
          ]
        }
      }
    },
    "controller.animation.pig.move": {
      "states": {
        "default": {
          "parameters": [ "query.walk_speed" ],
          "animations": [
            {
              "walk": [
                {
                  "0.0": 0.0,
                  "1.0": 1.0
                }
              ]
            },
            { "look_at_target": [] }
          ]
        }
      }
    }
  }
}