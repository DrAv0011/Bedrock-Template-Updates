{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.agent.move": {
      "states": {
        "moving": {
          "animations": [
            { "move": [] },
            { "look_at_target": [] }
          ],
          "transitions": [
            { "swinging_arms": "variable.agent.swinganimationtick > 0" }
          ]
        },
        "swinging_arms": {
          "animations": [
            { "swing_arms": [] },
            { "look_at_target": [] }
          ],
          "transitions": [
            { "moving": "variable.agent.swinganimationtick <= 0" }
          ]
        }
      }
    }
  }
}