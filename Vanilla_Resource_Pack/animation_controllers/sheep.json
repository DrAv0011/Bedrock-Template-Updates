{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.sheep.setup": {
      "states": {
        "default": {
          "animations": [
            { "setup": [] },
            { "look_at_target": [] }
          ]
        }
      }
    },
    "controller.animation.sheep.baby": {
      "states": {
        "baby": {
          "parameters": [ "query.is_baby" ],
          "animations": [
            {
              "baby_transform": [
                {
                  "0.0": 0.0,
                  "1.0": 1.0
                }
              ]
            }
          ]
        }
      }
    },
    "controller.animation.sheep.move": {
      "states": {
        "default": {
          "parameters": [ "query.walk_speed" ],
          "animations": [
            {
              "walk": [
                {
                  "0.0": 0.0,
                  "1.0": 1.0
                }
              ]
            }
          ],
          "transitions": [
            { "grazing": "query.is_grazing" }
          ]
        },
        "grazing": {
          "animations": [ { "grazing": [] } ],
          "transitions": [
            { "default": "!query.is_grazing" }
          ]
        }
      }
    }
  }
}
