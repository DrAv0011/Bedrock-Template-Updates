        // Center element horizontally in stack panel and pad it
        "wrapper@common.empty_panel": {
          "size": [ "100%", "100%c + 20px" ],
          "controls": [
            { "to_app_store@authentication.to_app_store": { } }
          ]
        }
      }
    ]
  },

  "sign_in_ios_content": {
    "type": "panel",
    "size": [ "95%", "95%" ],
    "controls": [
      { "sign_in@authentication.sign_in_ios_header": { } },
      { "get_minecraft@authentication.sign_in_ios_footer": { } }
    ]
  },

  "sign_in_ios_button@common_buttons.light_text_button": {
    "$pressed_button_name": "button.signIn",
